		</field>	
		<field
			name="show_profile"
			type="radio"
			default="0"
			label="COM_JOOMLEAGUE_ADMIN_PMEMBERS_PROFILE"
			description="COM_JOOMLEAGUE_ADMIN_PMEMBERS_PROFILE"
			layout="joomla.form.field.radio.switcher">
